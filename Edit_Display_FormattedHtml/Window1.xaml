    xmlns:system="clr-namespace:System;assembly=mscorlib"
    x:Name="window"
    Title="Custom Language"
    Width="750"
    Height="600"
    skinManager:SfSkinManager.VisualStyle="Office2016Colorful"
    Icon="App.ico"
    Style="{StaticResource windowStyle}"
    WindowStartupLocation="CenterScreen">

